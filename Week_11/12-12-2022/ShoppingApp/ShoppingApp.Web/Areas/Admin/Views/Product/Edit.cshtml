@model ProductUpdateDto
<h1>Ürün Düzenleme</h1>
<hr />
<form asp-area="Admin"
      asp-controller="Product"
      asp-action="Edit"
      method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="row">
        <div class="col-8 col-lg-6 col-md-8 col-sm-10">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input class="form-control" asp-for="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input class="form-control" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">

                <label asp-for="Categories" class="form-label"></label>

                @foreach (var product in Model.)
                {
                    <div>
                        <input type="checkbox"
                           class="form-check-input"
                           name="GetProductWithCategories"
                           value="@product.Id"
                           @if(Model.GetProductWithCategories != null)
                           {
                           @(Model.GetProductWithCategories.Any(sc => sc==product.Id) ? "checked" : "")
                           } />

                        <label>@product.Name</label>
                    </div>
                }
                <span asp-validation-for="GetProductWithCategories" class="text-danger"></span>
            </div>
            
            
            <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
            <a type="button" class="btn btn-danger"
               asp-area="Admin"
               asp-controller="Product"
               asp-action="Delete"
               asp-route-id=@Model.Id>Sil</a>
            <a type="button" class="btn btn-light"
               asp-area="Admin"
               asp-controller="Product"
               asp-action="Index">Vazgeç</a>
        </div>
    </div>
</form>
