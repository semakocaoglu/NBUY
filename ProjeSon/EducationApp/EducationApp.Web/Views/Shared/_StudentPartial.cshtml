@using EducationApp.Web.Models;
@model StudentDto
<div class="card mb-3" style="max-width: 700px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="/images/@Model.ImageUrl" class="img-fluid rounded-start h-100 " alt="...">
        </div>
        <div class="col-md-8">
            <div class="row card-body">
                <div class="col-10">
                    <h5 class="card-title" style="margin-bottom:2px;">@Model.FirstName  @Model.LastName</h5>
                    <p class="card-text" style="margin-top:2px;">@Model.Gender</p>
                    @foreach (var category in Model.Categories)
                    {
                        <div class="d-flex">
                            <i class="fa-solid fa-book fs-6 mt-1"></i>
                            <p class="card-text ms-1 fs-6">@category.Name</p>
                        </div>

                    }




                    <div class="d-flex">
                        <i class="fa-solid fa-location-dot fs-6 mt-1"></i>
                        <p class="card-text ms-1 fs-6">@Model.City</p>
                    </div>
                </div>
                <div class="col-2 ">
                    <a class="btn btn-warning  ">İncele</a>
                </div>

                </div>
            </div>
        </div>
    </div>
