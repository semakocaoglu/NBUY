@model ProductViewModel
<h1 class="display-6">@Model.Name adlı ürün güncelleniyorrr......</h1>
<hr />
<form asp-controller="Product"
      asp-action="Edit"
      method="post">
      <input  type="hidden"  asp-for="Id" />
      <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-6">
            <div class="row mb-3">
                <div class="col-2">
                    <label class="form-label" asp-for="Name"></label>
                </div>
                <div class="col-10">
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="row mb-3">
                <div class="col-2">
                    <label class="form-label" asp-for="Description"></label>
                </div>
                <div class="col-10">
                    <input type="text" asp-for="Description" class="form-control" />
                </div>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="row mb-3">
                <div class="col-2">
                    <label class="form-label" asp-for="Price"></label>
                </div>
                <div class="col-10">
                    <input type="text" asp-for="Price" class="form-control" />
                </div>
                <span asp-validation-for="Price"></span>
            </div>
            <div class="row mb-3">
                <div class="col-2">
                    <label class="form-label" asp-for="ImageUrl"></label>
                </div>
                <div class="col-10">
                    <input type="text" asp-for="ImageUrl" value="1.png" class="form-control" />
                </div>
                <span asp-validation-for="ImageUrl"></span>
            </div>
        </div>
        <div class="col-4">
            @foreach (var category in Model.Categories)
            {
                <div>
                    <input type="checkbox" class="form-check-input"
                       value="@category.Id"
                       name="selectedCategoryIds" 
                       @(Model.SelectedCategoryIds.Any(sci => sci ==category.Id) ? "checked" : "") />
                    <label class="form-label">@category.Name</label>
                </div>
            }
        </div>
    </div>
    <button class="btn btn-success"
            type="submit">
        Değişiklikleri Kaydet
    </button>
</form>
