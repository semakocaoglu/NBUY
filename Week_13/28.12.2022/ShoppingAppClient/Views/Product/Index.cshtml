@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="display-6">Ürün Listesi</h1>
<a class="btn btn-primary "
   asp-controller="Product"
   asp-action="Create"
 >Yeni Ürün Ekle</a>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
           
            <th>#</th>
            <th>Ürün Ad</th>
            <th>Fiyatı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>


     
                <td><img src="http://localhost:5200/images/@product.ImageUrl" width="15" /> </td>
                <td>@product.Name</td>
                <td>@($"{product.Price:C0}")</td>
                <td><a class="btn btn-warning btn-sm"
                asp-controller="Home"
                asp-action="GetProduct"
                asp-route-id="@product.Id"
                
                >Düzenle</a>

    <a class="btn btn-danger btn-sm"
                asp-controller="Home"
                asp-action="Delete"
            asp-route-id="@product.Id"

                >Sil</a>
            </td>

            </tr>
        }
    </tbody>
</table>