@* Burası her bir kitabı göstermeye yarar.!! *@

@model Kitap
<div class="col-4">
    <div card="card text-center mb-2" style="height:200px">
        <div class="card-header bg-primary text-white">
            <h6 class="dispşay-6 fs-6 fw-normal m-0">@Model.Ad</h6> 

        </div>
        <div>
            <div class="card-title">@Model.Kategori.Ad</div>
        </div>
        <div>
            <p>Yazar:@Model.Yazar.Ad</p>
            <p>Basım Yılı:@Model.BasimYili</p>

        </div>
        
    </div>
    <div class="card-footer">
        <a asp-controller="Home" asp-action="Detay" asp-route-id=@Model.Id class="btn btn-sm btn-info">İncele</a>
        <a class="btn btn-sm btn-">Sepete EKle</a>
    </div>
</div>