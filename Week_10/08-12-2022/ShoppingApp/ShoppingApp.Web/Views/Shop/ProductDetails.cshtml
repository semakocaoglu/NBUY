@using ShoppingApp.Web.Models.Dtos
@model ProductDetailsDto

<div class="container">
    <div class="row">
        <div class="col-4">
            <img src="/images/@Model.ImageUrl"
        </div>

        <div class="">
            <div>@Model.Name</div>
        </div>

        <div class="col-4">


            <div>@Model.Description</div>
            <div>@Model.Price</div>
        </div>
        <div class="col-4">
            KATEGORİLER
            @foreach (var category in Model.Categories)
            {
                <div>@category.Name</div>
            }
        </div>

    </div>

</div>