@model List<CategoryDto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-3">Welcome EducationApp</h1>
</div>


<div class="container mt-4 ms-5">
    <div class="row d-flex justify-content-center">
        <div class="col-3">
            <a class="btn btn-info"
               asp-area=""
               asp-controller="Student"
               asp-action="Index">
                Ders Vermek İstiyorum
            </a>
        </div>
        <div class="col-3">
            <a class="btn btn-info"
               asp-area=""
               asp-controller="Teacher"
               asp-action="Index">
                Ders Almak İstiyorum
            </a>
        </div>
    </div>
</div>

<div class="card">
<div class="row">
    @foreach (var categoryDto in Model)
    {
        <div class="col-md-4">
            @await Html.PartialAsync("_CategoryPartial", categoryDto)
        </div>
    }
</div>
</div>





