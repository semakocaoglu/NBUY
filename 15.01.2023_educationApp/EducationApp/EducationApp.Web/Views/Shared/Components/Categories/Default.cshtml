@using EducationApp.Web.Models
@model List<CategoryDto>
<div class=" justify-content-around w-75">
    @foreach (var category in Model)
    {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-success p-1  bg-opacity-10 text-info border-bottom shadow-lg mb-3 ">

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown dropend  fst-italic fw-normal "> 
                        <a class="nav-link dropdown-toggle text-decoration-none "
                       
                       asp-controller="Student"
                       asp-action="Index"
                       asp-route-categoryurl=@category.Url>
                            @category.Name
                        </a>
                    </li>
                    <ul class="dropdown-menu">
                        @foreach (var subCategory in category.SubCategory)
                        {
                            <li>
                                <a class="dropdown-item">@subCategory.Name</a>
                            </li>
                        }
                    </ul>

                </ul>
            </div>

        </nav>
    }
</div>


