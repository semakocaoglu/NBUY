                        <option value="72">Batman</option>
                        <option value="73">Şırnak</option>
                        <option value="74">Bartın</option>
                        <option value="75">Ardahan</option>
                        <option value="76">Iğdır</option>
                        <option value="77">Yalova</option>
                        <option value="78">Karabük</option>
                        <option value="79">Kilis</option>
                        <option value="80">Osmaniye</option>
                        <option value="81">Düzce</option>
                    </select>
                </div>


            </div>

            <div class="mb-3">
                
                <input type="file" asp-for="ImageFile" accept="image/" />
                <div>
                    <label for="ImageFile" class="btn btn-info mt-2">Profil Fotoğrafı Yükle</label>
                    <label id="img-url">@Model.ImageUrl</label>
                </div>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>


            <label class="form-label fw-bold  " asp-for="Categories"></label>
            @foreach (var Category in Model.Categories)
            {
                <div>
                    <input type="checkbox" class="form-check-input" value="@Category.Id" name="SelectedCategoryIds"
                       @if (Model.SelectedCategoryIds != null)
                       {
                       @(Model.SelectedCategoryIds.Any(sc => sc== Category.Id) ? "checked" : "")
                       } />
                    <label> @Category.Name</label>
                </div>
            }



            <button type="submit" class="btn btn-primary mt-4">Create</button>
            <a type="button" class="btn btn-light mt-4"
               asp-area="Admin"
               asp-controller="Teacher"
               asp-action="Index">Vazgeç</a>



        </form>

    </div>

</div>
