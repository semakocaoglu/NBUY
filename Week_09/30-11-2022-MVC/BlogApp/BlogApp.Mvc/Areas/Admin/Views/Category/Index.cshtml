@using BlogApp.Shared.Utilities.Result.ComplexTypes

@using BlogApp.Entities.Dtos

@model CategoryListDto

@{
    Layout = "_Layout";
    ViewBag.Title = "Kategoriler Anasayfa";
}

@if (Model.ResultStatus == ResultStatus.Success)
{

    @*Kategoriler sıralanacak*@

    <h1 class="mt-4">Admin Kategoriler</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
        <li class="breadcrumb-item active">Kategoriler</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            KAtegoriler
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Açıklama</th>
                            <th>Aktif mi?</th>
                            <th>Silinmiş mi?</th>
                            <th>Not</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturan Kullanıcı</th>
                            <th>Son Düzenlenme Tarihi</th>
                            <th>Son Düzenleyici Kullanıcı</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@category.IsActive</td>
                                <td>@category.IsDeleted</td>
                                <td>@category.Note</td>
                                <td>@category.CreatedDate.ToShortDateString()</td>
                                <td>@category.CreatedByName</td>

                                <td>@category.ModifiedDate.ToShortDateString()</td>





                            </tr>
                        }
                    </tbody>
                    <tr>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Office</th>
                        <th>Age</th>
                        <th>Start date</th>
                        <th>Salary</th>
                    </tr>
                   




                </table>
            </div>
        </div>
    </div>



}

@section Scripts{
    <script>

        $(document).ready(function () {
            $('#categoriesTable').DataTable({
                dom: "<'row'<'col-sm-3'l><'col-sm-6 text-center'B><'col-sm-3'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-5'i><'col-sm-7'p>>",
                buttons: [
                    {
                        
                        text: 'Ekle',
                        action: function(e,dt, node, config){
                            alert('Ekle butonuna tklandı');
                        },
                        className:"btn btn-success"
                    },
                    {
                        
                        text: 'Yenile',
                        action: function (e, dt, node, config) {
                            alert('Yenile butonuna tklandı');
                        },
                        className:"btn btn-success"
                    },
                ],
                language:{
                    url: "https://cdn.datatables.net/plug-ins/1.13.1/i18n/tr.json",
                }
            });
        });
    </script>
}
