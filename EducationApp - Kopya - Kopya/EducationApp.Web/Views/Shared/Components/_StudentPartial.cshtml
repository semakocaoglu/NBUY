@using EducationApp.Web.Models;
@model StudentDto
<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="..." class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.FirstName , @Model.LastName</h5>
                @foreach(var category in Model.Categories)
                {
                    <a href="#" class="btn btn-link">@category.Name</a>
                }
                <p class="card-text">@Model.City</p>
                <p class="card-text">@Model.Gender</p>
                
            </div>
        </div>
    </div>
</div>
