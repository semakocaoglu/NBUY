@using EducationApp.Web.Models
@model List<CategoryDto>

     <div class="container-xxl my-md-4 bd-layout">
    <aside class="bd-sidebar">
      <nav class="collapse bd-links" id="bd-docs-nav" aria-label="Docs navigation"><ul class="list-unstyled mb-0 py-3 pt-md-1">
      <li class="mb-1">
        <button class="btn d-inline-flex align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#getting-started-collapse" aria-expanded="false"
                            asp-controller="Student"
                            asp-action="Index"
                            asp-route-categoryurl="">
          Tümünü Göster
        </button>

        <div class="collapse" id="getting-started-collapse">
          <ul >
                            @foreach (var category in Model)
                            {
                                <a class="list-unstyled fw-normal pb-1 small"
                               asp-controller="Student"
                               asp-action="StudentList"
                               asp-route-categoryurl=@category.Url>@category.Name</a>

                                <li class="mb-1 ">
        <button class="btn d-inline-flex align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#customize-collapse" aria-expanded="false">

                                    @foreach (var subCategory in category.SubCategory)
                                    {
                                        <li class="">@subCategory.Name</li>
                                    }
                                </li>
                            }
          </ul>
        </div>
     
      




