@using EducationApp.Web.Models;
@model List<StudentDto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="display-5">Ders Almak İsteyenler</div>

<div class="col-2">
    @await Component.InvokeAsync("Categories")

</div>
<style>
    .renk {
        background-color: #45bc45;
    }
</style>

<nav class="nav nav-pills flex-column flex-sm-row mb-3 renk">
    <a class="flex-sm-fill text-sm-center nav-link text-white"
       aria-current="page"
       asp-controller="Student"
       asp-action="Index"
       asp-route-categoryurl="">Tümünü göster</a>

    @foreach (var category in Model)
    {
        <a class="flex-sm-fill text-sm-center nav-link text-white"
       asp-controller="Student"
       asp-action="Index"
       asp-route-categoryurl="@category.Url">@category.FirstName</a>
    }

    <hr />

</nav>




