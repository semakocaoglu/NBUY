@model Kategori
@{
    ViewData["Title"] = "KategoriEkle";
}
<h1 class="display-6">Yeni Kategori Oluştur</h1>
<hr>
<form asp-controller="Home" asp-action="KategoriEkle" method="post">
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="Aciklama" ></label>
        </div>
        <div class="col-4">
            <input type="text" asp-for="Aciklama">
        </div>
    </div>
    <div class="row mb-2">
        
        <div class="col-4 offset-2"> 
            @* offset-2 : 2kolonluk alan brakılmasını sağlar. *@
            <input class="btn btn-primary" type="submit" value="">
        </div>
    </div>
</form>