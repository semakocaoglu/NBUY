@model List<Kitap>
@{
    ViewData["Title"] = "Kitap Listesi";
}

<h1 class="display-6">Kitap Listesi</h1>
<hr>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kitap Adı</th>
            <th>Basım Yılı</th>
            <th>Sayfa Sayısı</th>
            <th>Kategori</th>
            <th>Yazar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.Id</td>
                <td>@k.Ad</td>
                <td>@k.BasimYili</td>
                <td>@k.SayfaSayisi</td>
                <td>@k.Kategori.Ad</td>
                <td>@k.Yazar.Ad</td>
            </tr>
        }
    </tbody>
</table>