@model List<KitapListViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-3">
            @* Burası kategorilerin listeleneceği yer *@
            @await Component.InvokeAsync("Kategoriler")

        </div>
        <div class="col-9">
            @if (Model.Count > 0)
            {
                <div class="row">
                    @foreach (var kitap in Model)
                    {
                        <partial name="_Kitap" model="kitap" />
                    }
                </div>
            }else{
                @await Html.PartialAsync("KayitYok")
            }


        </div>
    </div>
</div>
