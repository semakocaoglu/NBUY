@model List<Kategori>
<div class="px-2">
    <h1 class="display-6 fs-3 text-primary">KAtegoriler</h1>
</div>
<div class="list-group">
    @foreach (var k in Model)
    {
        <a 
            class="list-group-item list-group-item-action @(ViewBag.SeciliKategori==k.Id ? "active" : "")
            asp-controller="Home"
            asp-action="KategoriyeGoreKitapListesi"
            asp-route-id =@k.Id>
            @k.Ad
        </a>
    }

</div>