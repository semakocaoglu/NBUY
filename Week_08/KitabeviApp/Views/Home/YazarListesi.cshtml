@model List<Yazar>
@{
    ViewData["Title"] = "Yazar Listesi";
}

<h1 class="display-6">Yazar Listesi</h1>
<hr>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Yazar Ad Soyad Adı</th>
            <th>Doğum Yılı</th>
            <th>Cinsiyet</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var y in Model)
        {
            <tr>
                <td>@y.Id</td>
                <td>@y.Ad</td>
                <td>@y.DogumYili</td>
                <td>@(y.Cinsiyet=='K' ? "Kadın" : "Erkek")</td>
            </tr>

            <tr>
                <td>
                    <a class="btn btn-sm btn-warning" asp-controller="Home" asp-action="YazarGüncelle"
                    asp-route-id=@y.Id>Güncelle</a>

                    <a class="btn btn-sm btn-warning" asp-controller="Home" asp-action="YazarSil" asp-route-id=@y.Id>Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>