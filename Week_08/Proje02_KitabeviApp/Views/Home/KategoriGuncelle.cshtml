@model KitapViewModel
@{
    ViewData["Title"] = "Kategori Güncelle";
}

<h1 class="display-6">Kategori Güncelle</h1>
<hr>
<form asp-controller="Home" asp-action="KategoriGuncelle" method="post">
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="Kitap.Ad"></label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="Kitap.Ad">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-2">
            <label class="form-label" asp-for="Kitap.Aciklama"></label>
        </div>
        <div class="col-4">
            <input class="form-control" type="text" asp-for="Kitap.Aciklama">
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-4 offset-2">
            <input class="btn btn-primary" type="submit" value="Güncelle">
        </div>
    </div>
</form>